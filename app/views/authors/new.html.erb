<h1>New author page</h1>

<%= form_for :author, url: authors_path do |f| %>
	<div>
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>
	</div>

	<div>
		<%= f.label :last_name %>
		<%= f.text_field :last_name %>
	</div>

	<div>
		<%= f.label :homepage %>
		<%= f.text_field :homepage %>
	</div>

	<div>
		<%= f.submit "Create Author" %>
	</div>
<% end %>
